<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".LocalGameActivity">

    <Button
        android:id="@+id/btn_card_czar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_card_czar"
        app:layout_constraintBottom_toTopOf="@+id/btn_card_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_card_player"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_card_player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_card_czar" />
</androidx.constraintlayout.widget.ConstraintLayout>